{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",    // Output directory for compiled files
    "rootDir": "./src"     // Root directory of TypeScript files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
